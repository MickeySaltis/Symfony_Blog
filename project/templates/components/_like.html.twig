<div class="pt-1 pb-3 grid justify-items-center">
    <div class="flex ">

        {% if app.user %}
            <a class="flex w-fit" href="{{ path('like_post', {id: post.id}) }}" data-action="like">
        {% endif %}

                <!-- Like by User -->
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-2 h6 w-6 fill-red-500 hover:fill-white {{ app.user in post.likes ? '' : 'hidden' }}" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                </svg>

                <!-- Like by Default -->
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-2 h-6 w-6 unfilled hover:fill-red-500 {{ app.user in post.likes ? 'hidden' : '' }}" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                </svg>

            <span class="ml-2">{{post.likes|length}} {{ post.likes|length <= 1 ? ' J\'aime' : ' J\'aimes' }}  </span>

        {% if app.user %}
            </a>
        {% endif %}

    </div>
</div>