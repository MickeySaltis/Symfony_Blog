{% if badges %}
    <div class="badges flex justify-start mt-3 flex-wrap">
		{% for badge in badges %}
			<span class="text-xs inline-block mr-2 mb-2 py-1 px-3 leading-none text-center whitespace-nowrap align-baseline bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">
				<a href="{{ path('category_index', {slug: badge.slug}) }}">{{ badge.name }}</a>
			</span>
		{% endfor %}
	</div>

{% endif %}